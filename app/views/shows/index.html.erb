<p id="notice"><%= notice %></p>

<h1>Listing Shows</h1>

<table>
  <thead>
    <tr>
      <th>Banda</th>
      <th>Local</th>
      <th>Data</th>
      <th>Hora</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.banda.nome %></td>
        <td><%= show.local %></td>
        <td><%= show.data.strftime("%d/%m/%Y") %></td>
        <td><%= show.hora.strftime("%H:%M") %></td>
        <td><%= show.descricao %></td>
        <td><%= link_to 'Show', show, class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Edit', edit_show_path(show), class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red", role: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path, class: "btn btn-default", role: "button" %>
